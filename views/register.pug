html
	head
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
		link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
		link(rel='stylesheet' href='stylesheets/style.css')
		title Register
	.d-flex.justify-content-center.align-items-center.fullHeight
		.formWrapper.col-6
			form(method='POST' action='/registration')
				.form-group
					label First Name
					input.form-control(type='text' placeholder='First Name' name='firstName')
				.form-group
					label Last Name
					input.form-control(type='text' placeholder='Last Name' name='lastName')
				.form-group
					label Email
					input.form-control(type='email' placeholder='Email' name='email')
				.form-group
					label Password
					input.form-control(type='password' placeholder='Password' name='password')
				button.btn.btn-primary(type='submit') Submit


	script(src="https://cdn.jsdelivr.net/npm/sweetalert2@8")
	script.
		var response = "#{message}";
		if(response && response !== ""){
			Swal.fire(response)
		}
